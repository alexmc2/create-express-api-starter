const express = require('express');

const usersRepository = require('../repositories/usersRepository');

const router = express.Router();

<% if (educational) { %>// Wrap async route handlers in try/catch and forward errors to next()
// so Express's error-handling middleware can respond with a proper error.
<% } %>router.get('/', async (_req, res, next) => {
  try {
    const users = await usersRepository.getAll();
    res.status(200).json(users);
  } catch (error) {
    next(error);
  }
});

router.post('/', async (req, res, next) => {
  try {
<% if (educational) { %>    // Validate input before passing it to the repository.
    // Passing an error object to next() skips to the error handler.
<% } %>    const { name, email } = req.body ?? {};

    if (!name || typeof name !== 'string') {
      return next({
        status: 400,
        message: '"name" is required.'
      });
    }

    const user = await usersRepository.create({
      name: name.trim(),
      email: typeof email === 'string' ? email.trim() : null
    });

    return res.status(201).json(user);
  } catch (error) {
    return next(error);
  }
});

module.exports = router;
