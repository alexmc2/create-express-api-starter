<% if (educational) { %>// Create a connection pool so the app reuses database connections
// instead of opening a new one for every query.
<% } %>const { Pool } = require('pg');

if (!process.env.DATABASE_URL) {
  throw new Error('DATABASE_URL is required for Postgres mode.');
}

const pool = new Pool({
  connectionString: process.env.DATABASE_URL
});

module.exports = pool;
