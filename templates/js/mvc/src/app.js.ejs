<% if (educational) { %>// Enable CORS for local client/server development workflows.
<% } %>app.use(cors());
<% if (educational) { %>// Add secure HTTP headers by default.
<% } %>app.use(helmet());
<% if (educational) { %>// Log requests in development-friendly format.
<% } %>app.use(morgan('dev'));

app.use('/health', healthRouter);
app.use('/api/users', usersRouter);

app.use(notFound);
app.use(errorHandler);

module.exports = app;
