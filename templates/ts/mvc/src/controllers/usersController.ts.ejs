import type { RequestHandler } from 'express';

import usersService from '../services/usersService';

<% if (educational) { %>// Controllers handle HTTP concerns (req, res, status codes) and delegate
// business logic to the service layer. This keeps each layer focused.
<% } %>const listUsers: RequestHandler = async (_req, res, next) => {
  try {
    const users = await usersService.listUsers();
    res.status(200).json(users);
  } catch (error) {
<% if (educational) { %>    // Forward errors to Express's error-handling middleware.
<% } %>    next(error);
  }
};

const createUser: RequestHandler = async (req, res, next) => {
  try {
    const user = await usersService.createUser(req.body ?? {});
    res.status(201).json(user);
  } catch (error) {
    next(error);
  }
};

export default {
  listUsers,
  createUser
};
