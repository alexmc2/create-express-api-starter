  name: string;
  email: string | null;
}

interface CreateUserInput {
  name: string;
  email: string | null;
}

const users: User[] = [
  {
    id: 1,
    name: 'Ada Lovelace',
    email: 'ada@example.com'
  },
  {
    id: 2,
    name: 'Grace Hopper',
    email: 'grace@example.com'
  }
];

let nextId = users.length + 1;

async function getAll(): Promise<User[]> {
  return users;
}

async function create({ name, email }: CreateUserInput): Promise<User> {
  const user: User = {
    id: nextId,
    name,
    email
  };

  nextId += 1;
  users.push(user);

  return user;
}

export default {
  getAll,
  create
};
